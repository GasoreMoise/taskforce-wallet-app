# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
DB_URI=mongodb://localhost:27017/wallet
TEST_DB_URI=mongodb://localhost:27017/wallet_test

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=30d

